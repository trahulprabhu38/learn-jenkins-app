pipeline {
    agent any

    stages{
        stage('build'){
            agent{
                docker{
                    image 'node:23-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    ls -la
                    node --version
                    npm --version

                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('test') {
            steps{
                script {
                    def folderPath = '/build' // Replace with your folder path
                    if (fileExists("${folderPath}/index.html")) {
                        echo "index.html is present in the folder."
                    } else {
                        echo "index.html is NOT present in the folder."
                    }
                sh '''
                    grep index.html
                    npm test a
                '''
            }
        }
    }
}

}